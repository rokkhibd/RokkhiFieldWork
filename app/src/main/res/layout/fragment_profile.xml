<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Ui.ProfileFragment">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        style="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:background="?attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:layout_below="@id/appbar"
        android:background="@color/lightorange"
        android:layout_width="match_parent"
        android:layout_height="210dp"/>

    <LinearLayout
        android:id="@+id/one"
        android:layout_below="@id/appbar"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_frag_profilePic"
                android:elevation="1dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/maleone"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:contentPaddingTop="15dp"
                    android:elevation="5dp"
                    app:contentPaddingRight="15dp"
                    app:contentPaddingLeft="15dp"
                    app:contentPaddingBottom="15dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="85dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/pofile_frag_userName"
                            android:fontFamily="@font/robotocondensebold"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="60dp"
                            android:textSize="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/profile_frag_userAddress"
                            android:fontFamily="@font/robotocondensebold"
                            android:layout_gravity="center_horizontal"
                            android:textSize="17sp"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/profile_frag_mailId"
                            android:fontFamily="@font/robotocondensebold"
                            android:layout_gravity="center_horizontal"
                            android:textSize="17sp"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txt"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/robotocondensebold"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/one"
        android:text="Total Earning:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/profile_frag_totalearn"
        android:textColor="@color/orange"
        android:fontFamily="@font/robotocondensebold"
        android:textSize="35sp"
        android:gravity="center_horizontal"
        android:text="800 TK"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@id/txt2"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/robotocondensebold"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/profile_frag_totalearn"
        android:text="Buildings Covered SO far:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/profile_frag_totalbldngcover"
        android:textColor="@color/orange"
        android:fontFamily="@font/robotocondensebold"
        android:textSize="35sp"
        android:gravity="center_horizontal"
        android:text="10"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.github.ybq.android.spinkit.SpinKitView
        android:layout_centerInParent="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/SpinKitView.Large.Wave"
        app:SpinKit_Color="@color/orange"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>