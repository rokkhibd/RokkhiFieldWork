<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Ui.MyhomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        style="@style/AppTheme.AppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:background="?attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/myHomeFrag_cardview"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/appbar"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <RelativeLayout
            android:background="@drawable/round_edittext2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fw_myhomefrag_image"
                android:src="@drawable/maleone"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_toRightOf="@id/fw_myhomefrag_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/fw_myhomefrag_name"
                    android:text="Md. Rejoan Rahman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="Total Earning:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fw_myhomefrag_totalEarn"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="800/-"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="Pending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="20sp"
                    android:gravity="center"
                    android:id="@+id/fw_myhomefrag_pending"
                    android:text="800/-"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:id="@+id/txt"
        android:layout_below="@id/myHomeFrag_cardview"
        android:text="Buildings Covered So far:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myhome_frag_recyclerview"
        android:layout_margin="10dp"
        tools:listitem="@layout/home_list_layout"
        android:layout_below="@id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:id="@+id/floating_btn"
        android:layout_alignParentEnd="true"
        android:src="@drawable/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressbar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>