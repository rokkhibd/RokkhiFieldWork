<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="180dp">


    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"

        android:layout_width="match_parent"
        android:layout_height="160dp">


        <LinearLayout

            android:background="@drawable/round_edittext"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_margin="5dp"
                android:id="@+id/myhome_frag_bldngName"
                android:text="Building Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="17sp"
                android:layout_margin="5dp"
                android:id="@+id/myhome_frag_bldngAddress"
                android:text="Building Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView

                android:textSize="17sp"
                android:layout_margin="5dp"
                android:id="@+id/myhome_frag_bldngstatus"
                android:text="Building status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="17sp"
                android:layout_margin="5dp"
                android:id="@+id/myhome_frag_bldngvisitdate"
                android:text="Building Visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>