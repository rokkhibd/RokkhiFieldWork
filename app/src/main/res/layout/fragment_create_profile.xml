<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/white"
    tools:context=".Ui.CreateProfileFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            style="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:background="?attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@color/orange"
                        android:textSize="25sp"
                        android:layout_centerVertical="true"
                        android:text="Create Profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fworker_photo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/maleone"
            android:layout_alignParentTop="true"
            app:civ_border_color="@color/black"
            app:civ_border_width=".5dp" />


        <TextView
            android:textColor="@color/grey"
            android:id="@+id/clickphototxt"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fworker_photo"
            android:text="Click Above to capture image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <EditText

            android:id="@+id/fworker_name_edit"
            android:paddingLeft="5dp"
            android:hint="Name"
            android:background="@drawable/round_edittext2"
            android:layout_below="@id/clickphototxt"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>

        <EditText

            android:id="@+id/fworker_phone_edit"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:hint="Phone Number"
            android:background="@drawable/round_edittext2"
            android:layout_below="@id/fworker_name_edit"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>

        <EditText

            android:id="@+id/fworker_address_edit"
            android:paddingLeft="5dp"
            android:hint="Address"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_edittext2"
            android:layout_below="@id/fworker_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>


        <EditText

            android:id="@+id/fworker_bloodgrp_edit"
            android:paddingLeft="5dp"
            android:hint="Blood Group"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_edittext2"
            android:layout_below="@id/fworker_address_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>

        <EditText

            android:id="@+id/fworker_nid_edit"
            android:paddingLeft="5dp"
            android:hint="N.I.D"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_edittext2"
            android:layout_below="@id/fworker_bloodgrp_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>


        <EditText

            android:id="@+id/fworker_bday_edit"
            android:paddingLeft="5dp"
            android:hint="Date of Birth"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_edittext2"
            android:layout_below="@id/fworker_nid_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>

        <ImageView
            android:id="@+id/calendar"
            android:layout_alignTop="@id/fworker_bday_edit"
            android:layout_alignBottom="@id/fworker_bday_edit"
            android:layout_alignRight="@id/fworker_bday_edit"
            android:src="@drawable/calendarlight"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText

            android:id="@+id/fworker_uni_edit"
            android:paddingLeft="5dp"
            android:hint="Univesity"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_edittext2"
            android:layout_below="@id/fworker_bday_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>

        <EditText

            android:id="@+id/fworker_college_edit"
            android:paddingLeft="5dp"
            android:hint="College"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_edittext2"
            android:layout_below="@id/fworker_uni_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>


        <EditText

            android:id="@+id/fworker_reffered_edit"
            android:paddingLeft="5dp"
            android:hint="Referred by whom"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_edittext2"
            android:layout_below="@id/fworker_college_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"/>

        <Button
            android:textAllCaps="false"
            android:id="@+id/create_profilebtn"
            android:layout_below="@id/fworker_reffered_edit"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:text="Create Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <ProgressBar
            android:visibility="gone"
            android:layout_marginTop="500dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


</ScrollView>